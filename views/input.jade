extends layout

block content
  .page-header
    h3 User Input
  form.form-horizontal(role='form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='control-label', for='How many hidden layers', style='margin-right: 5px;')  Hidden Layers: 
        input(type='number', name='hiddenLayers', min'1', max'5')
      br
      label(class='control-label', for='UserInput', style='margin-right: 5px;') Input: 
          input(type='number', name='inputNeurons', min'1', max='10')
      br
      label(class='control-label', for='UserOutput', style='margin-right: 5px;') Output: 
          input(type='number', name='outputNeurons', min'1', max='10')
      br
      label(class='control-label', for='Number of Neurons in hidden layer', style='margin-right: 5px;') Number of Neurons per Layer: 
          input(type='number', name='neuronsInHiddenLayer', min'1', max='10')
      br
      label(class='control-label', for='What type of neuron', style='margin-right: 5px;') Neuron Type: 
      select(name='neuronType')
          option(value='Binary') Binary
          option(value='Logarithmic') Logarithmic
          option(value='Sigmoid') Sigmoid
      br
      br
      label(class='control-label', for='What type of neuron network', style='margin-right: 5px;') Neuron Network: 
      select(name='networkType')
        option(value='feedforward') feedforward
        option(value='recurrent') recurrent
        option(value='Hopfield') Hopfield
      br
      br
      label(class='control-label', for='What is neuron name', style='margin-right 5px;') Neuron Name: 
        input(type='text', name='networkName')
      br
      br
      input(type='submit')
